<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    	
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MyActionStyle</item>
    		<item name="android:windowActionBarOverlay">true</item>
            
    </style>
    
    <style name="MyActionStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
       <item name="android:background">#3b000000</item>
    </style>


    <style name="redRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/red_radio</item>
    </style>

    <style name="blueRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/blue_radio</item>
    </style>

    <style name="yellowRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/yellow_radio</item>
    </style>

    <style name="orangeRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/orange_radio</item>
    </style>

    <style name="greenRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/green_radio</item>
    </style>

</resources>
